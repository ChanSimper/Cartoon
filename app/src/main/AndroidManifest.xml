<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.chrissen.cartoon">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".CartoonApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="Channel ID" android:value="Coolapk"/>

        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.ChapterActivity">
        </activity>
        <activity android:name=".activity.ContentActivity">
        </activity>
        <activity android:name=".activity.user.SignInActivity">
        </activity>
        <activity android:name=".activity.user.RegisterActivity">
        </activity>
        <activity android:name=".activity.user.ForgetPwdActivity">
        </activity>
        <activity android:name=".activity.user.UserInfoActivity">
        </activity>
        <activity android:name=".activity.BookNoteActivity">
        </activity>
        <activity android:name=".activity.BookDetailActivity">
        </activity>

        <!--反馈-->
        <activity
            android:name="com.avos.avoscloud.feedback.ThreadActivity" >
        </activity>

    </application>

</manifest>